// ============================================================================
// Hospital Database Schema - 医院数据库（每家医院独立使用）
// 存储: 患者详情、病历记录、处方、化验报告、医生信息
// ============================================================================

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client/hospital"
}

// 注意: 这个 URL 会在运行时被动态替换
// 每个医院使用不同的 DATABASE_URL_HOSPITAL_xxx
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_HOSPITAL")
}

// ============================================================================
// Patient - 患者信息（本院副本）
// ============================================================================
model Patient {
  icNumber          String   @id
  fullName          String
  dateOfBirth       DateTime
  gender            String
  bloodType         String?
  phone             String?
  email             String?
  address           String?
  emergencyContact  String?
  emergencyPhone    String?
  allergies         String? // JSON array stored as string
  chronicConditions String? // JSON array stored as string
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  medicalRecords MedicalRecord[]
}

// ============================================================================
// Doctor - 医生信息
// ============================================================================
model Doctor {
  id             String  @id
  icNumber       String
  fullName       String
  specialization String
  licenseNumber  String?
  department     String?
  phone          String?
  email          String?
  isActive       Boolean @default(true)

  // Relations
  medicalRecords MedicalRecord[]

  @@index([icNumber])
}

// ============================================================================
// MedicalRecord - 病历记录
// ============================================================================
model MedicalRecord {
  id             String    @id @default(uuid())
  visitDate      DateTime
  visitType      String // outpatient, inpatient, emergency
  chiefComplaint String?
  diagnosis      String? // JSON array stored as string
  diagnosisCodes String? // JSON array stored as string (ICD-10)
  symptoms       String? // JSON array stored as string
  notes          String?
  vitalSigns     String? // JSON object stored as string
  followUpDate   DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Relations
  icNumber      String
  patient       Patient       @relation(fields: [icNumber], references: [icNumber])
  doctorId      String
  doctor        Doctor        @relation(fields: [doctorId], references: [id])
  prescriptions Prescription[]
  labReports    LabReport[]

  @@index([icNumber])
  @@index([visitDate])
}

// ============================================================================
// Prescription - 处方
// ============================================================================
model Prescription {
  id             String  @id @default(uuid())
  medicationName String
  dosage         String
  frequency      String
  duration       String?
  quantity       Int?
  instructions   String?
  isActive       Boolean @default(true)

  // Relations
  recordId      String
  medicalRecord MedicalRecord @relation(fields: [recordId], references: [id])
}

// ============================================================================
// LabReport - 化验报告
// ============================================================================
model LabReport {
  id             String   @id @default(uuid())
  testType       String
  testName       String
  result         String
  unit           String?
  referenceRange String?
  isAbnormal     Boolean  @default(false)
  reportDate     DateTime
  notes          String?

  // Relations
  recordId      String
  medicalRecord MedicalRecord @relation(fields: [recordId], references: [id])
}
