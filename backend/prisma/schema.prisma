// ============================================================================
// Prisma Schema for National Medical Identity Network
// ============================================================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// ============================================================================
// Hospital - 医院信息
// ============================================================================
model Hospital {
  id          String  @id
  name        String
  shortName   String
  city        String
  state       String
  address     String
  phone       String
  email       String
  apiEndpoint String
  isActive    Boolean @default(true)

  // Relations
  doctors        Doctor[]
  medicalRecords MedicalRecord[]
  users          User[]
  patientIndexes PatientIndexHospital[]
}

// ============================================================================
// Patient - 病人信息
// ============================================================================
model Patient {
  icNumber          String   @id
  fullName          String
  dateOfBirth       DateTime
  gender            String
  bloodType         String?
  phone             String?
  email             String?
  address           String?
  emergencyContact  String?
  emergencyPhone    String?
  allergies         String?  // JSON array stored as string
  chronicConditions String?  // JSON array stored as string
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  medicalRecords MedicalRecord[]
  patientIndex   PatientIndex?
}

// ============================================================================
// PatientIndex - 病人索引（记录病人在哪些医院有记录）
// ============================================================================
model PatientIndex {
  icNumber    String   @id
  lastUpdated DateTime @default(now())

  // Relations
  patient   Patient                @relation(fields: [icNumber], references: [icNumber])
  hospitals PatientIndexHospital[]
}

// ============================================================================
// PatientIndexHospital - 病人索引与医院的关联表
// ============================================================================
model PatientIndexHospital {
  id           String @id @default(uuid())
  icNumber     String
  hospitalId   String

  patientIndex PatientIndex @relation(fields: [icNumber], references: [icNumber])
  hospital     Hospital     @relation(fields: [hospitalId], references: [id])

  @@unique([icNumber, hospitalId])
}

// ============================================================================
// Doctor - 医生信息
// ============================================================================
model Doctor {
  id             String  @id
  icNumber       String
  fullName       String
  specialization String
  licenseNumber  String?
  department     String?
  phone          String?
  email          String?
  isActive       Boolean @default(true)

  // Relations
  hospitalId     String
  hospital       Hospital        @relation(fields: [hospitalId], references: [id])
  medicalRecords MedicalRecord[]
}

// ============================================================================
// MedicalRecord - 病历记录
// ============================================================================
model MedicalRecord {
  id             String   @id @default(uuid())
  visitDate      DateTime
  visitType      String   // outpatient, inpatient, emergency
  chiefComplaint String?
  diagnosis      String?  // JSON array stored as string
  diagnosisCodes String?  // JSON array stored as string (ICD-10)
  symptoms       String?  // JSON array stored as string
  notes          String?
  vitalSigns     String?  // JSON object stored as string
  followUpDate   DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  icNumber      String
  patient       Patient       @relation(fields: [icNumber], references: [icNumber])
  hospitalId    String
  hospital      Hospital      @relation(fields: [hospitalId], references: [id])
  doctorId      String
  doctor        Doctor        @relation(fields: [doctorId], references: [id])
  prescriptions Prescription[]
  labReports    LabReport[]
}

// ============================================================================
// Prescription - 处方
// ============================================================================
model Prescription {
  id             String  @id @default(uuid())
  medicationName String
  dosage         String
  frequency      String
  duration       String?
  quantity       Int?
  instructions   String?
  isActive       Boolean @default(true)

  // Relations
  recordId      String
  medicalRecord MedicalRecord @relation(fields: [recordId], references: [id])
}

// ============================================================================
// LabReport - 化验报告
// ============================================================================
model LabReport {
  id             String   @id @default(uuid())
  testType       String
  testName       String
  result         String
  unit           String?
  referenceRange String?
  isAbnormal     Boolean  @default(false)
  reportDate     DateTime
  notes          String?

  // Relations
  recordId      String
  medicalRecord MedicalRecord @relation(fields: [recordId], references: [id])
}

// ============================================================================
// User - 用户账户（认证用）
// ============================================================================
model User {
  id           String   @id @default(uuid())
  icNumber     String
  role         String   // patient, doctor, hospital_admin, central_admin
  passwordHash String
  lastLogin    DateTime?
  isActive     Boolean  @default(true)

  // Relations (optional - only for hospital staff)
  hospitalId String?
  hospital   Hospital? @relation(fields: [hospitalId], references: [id])

  auditLogsAsActor AuditLog[]
}

// ============================================================================
// PatientPrivacySetting - 病人隐私设置（控制哪些医院可以访问）
// ============================================================================
model PatientPrivacySetting {
  id           String  @id @default(uuid())
  icNumber     String
  hospitalId   String
  isBlocked    Boolean @default(false)  // true = 该医院被阻止访问

  @@unique([icNumber, hospitalId])
}

// ============================================================================
// AuditLog - 审计日志
// ============================================================================
model AuditLog {
  id              String   @id @default(uuid())
  timestamp       DateTime @default(now())
  action          String   // query, view, create, update, login, logout
  actorType       String   // doctor, patient, hospital_admin, central_admin, system
  actorHospitalId String?
  targetIcNumber  String?
  targetHospitalId String?
  details         String?
  ipAddress       String?
  success         Boolean  @default(true)

  // Relations
  actorId String
  actor   User   @relation(fields: [actorId], references: [id])
}
